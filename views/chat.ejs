<%- include('header') -%>

<div class="chat-container">
    <header class="chat-header">
    <h1><i class="fas fa-smile"></i> Yap Chat</h1>
    <a href="/" class="btn">Leave Group</a>
    </header>
    <main class="chat-main">
    <div class="chat-sidebar">
        <h3><i class="fas fa-comments"></i> Group Name:</h3>
        <h2 id="room-name">Friends Forever</h2>
        <h3><i class="fas fa-users"></i> Members</h3>
        <ul id="users">
        <li>Brad</li>
        <li>John</li>
        <li>Mary</li>
        <li>Paul</li>
        <li>Mike</li>
        </ul>
    </div>
    <div class="chat-messages"></div>
    </main>
    <div class="chat-form-container">
    <form id="chat-form">
        <input
        id="msg"
        type="text"
        placeholder="Enter Message"
        required
        autocomplete="off"
        />
        <button class="btn"><i class="fas fa-paper-plane"></i> Send</button>
    </form>
    </div>
</div>

<%- include('footer') -%>
